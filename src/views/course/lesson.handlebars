<section class="section lesson {{id}}">
  <div class="container">
    <div class="content">
      <header>
        <h1>{{title}}</h1>
        <p>
          <time datetime="{{formatDate date=date format="timestamp"}}">{{ formatDate date=date format="short" }}</time>
        </p>
        {{#cover}}
          {{> course/cover }}
        {{/cover}}
      </header>
      <div class="text">
        {{{ content }}}
      </div>
      <footer>
        {{#prevItem . list=lessons }}
          {{> course/lesson-card prev=true }}
        {{/prevItem }}
        {{#nextItem . list=lessons }}
          {{> course/lesson-card }}
        {{/nextItem }}
      </footer>
    </div>
  </div>
  </div>
</section>